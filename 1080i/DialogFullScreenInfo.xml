<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <!--<defaultcontrol always="true">9001</defaultcontrol>-->
    <!--<zorder>2</zorder>-->
    <controls>
        <include>TopBar</include>
        <control type="group">
            <include>OpenClose</include>
            <posy>0</posy>
            <control type="button" id="9001">
                <visible>![Player.ShowInfo + VideoPlayer.Content(LiveTV) + Window.IsActive(fullscreenvideo)]</visible>
                <include>ConditionWhite</include>
                <posx>1887</posx>
                <posy>609</posy>
                <height>33</height>
                <width>33</width>
                <colordiffuse>90ffffff</colordiffuse>
                <texturenofocus>white/topbar/topbar_exit_nofocus.png</texturenofocus>
                <texturefocus>white/topbar/topbar_exit_focus.png</texturefocus>
                <onleft>Dialog.Close(10142)</onleft>
                <onright>Dialog.Close(10142)</onright>
                <onup>Dialog.Close(10142)</onup>
                <ondown>Dialog.Close(10142)</ondown>
                <onback>Dialog.Close(10142)</onback>
                <onclick>Dialog.Close(10142)</onclick>
                <label></label>
                <onfocus>noop</onfocus>
            </control>
            <control type="button" id="9001">
                <visible>![Player.ShowInfo + VideoPlayer.Content(LiveTV) + Window.IsActive(fullscreenvideo)]</visible>
                <include>ConditionBlack</include>
                <posx>1887</posx>
                <posy>609</posy>
                <height>33</height>
                <width>33</width>
                <colordiffuse>90ffffff</colordiffuse>
                <texturenofocus>black/topbar/topbar_exit_nofocus.png</texturenofocus>
                <texturefocus>black/topbar/topbar_exit_focus.png</texturefocus>
                <onleft>Dialog.Close(10142)</onleft>
                <onright>Dialog.Close(10142)</onright>
                <onup>Dialog.Close(10142)</onup>
                <ondown>Dialog.Close(10142)</ondown>
                <onback>Dialog.Close(10142)</onback>
                <onclick>Dialog.Close(10142)</onclick>
                <label></label>
                <onfocus>noop</onfocus>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>450</posy>
                <width>1920</width>
                <height>700</height>
                <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
                <texture border="1,320,1,1">$VAR[Theme.Color]/common/widget_gradient_tall.png</texture>
            </control>
            <control type="group">
                <!-- CLEAR ART / LOGO -->
                <control type="image">
                    <visible>Skin.HasSetting(EnableClearArt)</visible>
                    <animation type="Conditional" pulse="true" reversible="false" condition="Skin.HasSetting(EnableClearLogo)+
                    [!String.IsEmpty(Player.Art(clearlogo))|!String.IsEmpty(Player.Art(tvshow.clearlogo))]+
                    [!String.IsEmpty(Player.Art(clearart))|!String.IsEmpty(Player.Art(tvshow.clearart))]">
                        <effect type="slide" start="0,0" end="0,0" time="1500" delay="3500"/>
                        <effect type="fade" start="100" end="0" time="500" delay="3000"/>
                    </animation>
                    <posx>1560</posx>
                    <posy>407</posy>
                    <width>300</width>
                    <height>235</height>
                    <aspectratio align="right" aligny="bottom">keep</aspectratio>
                    <texture background="true">$VAR[VideoPlayerClearArt]</texture>
                </control>
                <control type="image">
                    <visible>Skin.HasSetting(EnableClearLogo)</visible>
                    <animation type="Conditional" pulse="true" reversible="false" condition="Skin.HasSetting(EnableClearArt)+
                    [!String.IsEmpty(Player.Art(clearlogo))|!String.IsEmpty(Player.Art(tvshow.clearlogo))]+
                    [!String.IsEmpty(Player.Art(clearart))|!String.IsEmpty(Player.Art(tvshow.clearart))]">
                        <effect type="slide" start="0,0" end="0,0" time="1500" delay="3500"/>
                        <effect type="fade" start="0" end="100" time="500" delay="3000"/>
                    </animation>
                    <posx>1560</posx>
                    <posy>407</posy>
                    <width>300</width>
                    <height>235</height>
                    <aspectratio align="right" aligny="bottom">keep</aspectratio>
                    <texture background="true">$VAR[VideoPlayerClearLogo]</texture>
                </control>
            </control>
            <include content="StudioArt">
                <param name="x" value="1235"/>
                <param name="y" value="490"/>
                <param name="width" value="300"/>
                <param name="height" value="140"/>
                <param name="visible" value="true"/>
                <param name="align" value="left"/>
                <param name="aligny" value="bottom"/>
            </include>
            <control type="group">
                <posy>642</posy>
                <!-- CDART VIDEO -->
                <include content="DiscArt">
                    <param name="visible" value="!String.IsEmpty(VideoPlayer.Cover)+VideoPlayer.Content(movies)"/>
                    <param name="x" value="122"/>
                    <param name="y" value="-70"/>
                    <param name="width" value="211"/>
                    <param name="height" value="211"/>
                    <param name="texture" value="$VAR[VideoPlayerCdArt]"/>
                    <param name="xShadow" value="107"/>
                    <param name="yShadow" value="-85"/>
                    <param name="widthShadow" value="241"/>
                    <param name="heightShadow" value="241"/>
                    <param name="pulse" value="false"/>
                </include>
                <control type="group">
                    <control type="image">
                        <include>ConditionWhite</include>
                        <posx>25</posx>
                        <posy>0</posy>
                        <width>405</width>
                        <height>405</height>
                        <texture background="true" fallback="white/defaultVideoBig.png">$INFO[VideoPlayer.Cover]</texture>
                        <include>ThumbBorder</include>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <control type="image">
                        <include>ConditionBlack</include>
                        <posx>25</posx>
                        <posy>0</posy>
                        <width>405</width>
                        <height>405</height>
                        <texture background="true" fallback="black/defaultVideoBig.png">$INFO[VideoPlayer.Cover]</texture>
                        <include>ThumbBorder</include>
                        <aspectratio>keep</aspectratio>
                    </control>
                </control>
                <control type="label">
                    <visible>VideoPlayer.Content(livetv)</visible>
                    <posx>455</posx>
                    <posy>25</posy>
                    <width>1405</width>
                    <aligny>top</aligny>
                    <font>InfoTitleFont</font>
                    <include>TextColor_MainColor</include>
                    <label>$INFO[VideoPlayer.ChannelNumberLabel,, - ]$INFO[VideoPlayer.ChannelName]$INFO[VideoPlayer.Title, - ]</label>
                </control>
                <control type="label">
                    <visible>!VideoPlayer.Content(livetv)</visible>
                    <posx>455</posx>
                    <posy>25</posy>
                    <width>1405</width>
                    <aligny>top</aligny>
                    <font>InfoTitleFont</font>
                    <include>TextColor_MainColor</include>
                    <label>$INFO[VideoPlayer.Artist,, - ]$INFO[VideoPlayer.Album,, - ]$INFO[VideoPlayer.Season,$LOCALIZE[31973],.]$INFO[VideoPlayer.Episode,, - ]$INFO[VideoPlayer.Title]</label>
                </control>
                <control type="image">
                    <description>Default Seperator</description>
                    <posx>355</posx>
                    <posy>96</posy>
                    <width>1575</width>
                    <height>1</height>
                    <texture border="150,0,150,0">$VAR[Theme.Color]/list/bg_facade_separator.png</texture>
                </control>
                <control type="group">
                    <posx>395</posx>
                    <posy>35</posy>
                    <control type="label">
                        <visible>!VideoPlayer.Content(LiveTV)</visible>
                        <posx>TextMargin</posx>
                        <posy>65</posy>
                        <width>460</width>
                        <height>71</height>
                        <font>InfoDetailsFont</font>
                        <include>TextColor_MainColor</include>
                        <scroll>false</scroll>
                        <label fallback="416">$INFO[VideoPlayer.RatingAndVotes]</label>
                    </control>
                    <control type="label">
                        <visible>VideoPlayer.Content(LiveTV)+VideoPlayer.HasEpg</visible>
                        <posx>TextMargin</posx>
                        <posy>65</posy>
                        <width>670</width>
                        <height>71</height>
                        <font>InfoDetailsFont</font>
                        <include>TextColor_MainColor</include>
                        <scroll>false</scroll>
                        <label>$INFO[VideoPlayer.StartTime,, / ]$INFO[VideoPlayer.EndTime]</label>
                    </control>
                    <control type="label">
                        <visible>![VideoPlayer.Content(LiveTV)+!VideoPlayer.HasEpg]</visible>
                        <posx>TextMargin</posx>
                        <posy>135</posy>
                        <width>670</width>
                        <height>71</height>
                        <font>InfoDetailsFont</font>
                        <include>TextColor_MainColor</include>
                        <scroll>false</scroll>
                        <label>$INFO[VideoPlayer.Year,,     ]$INFO[VideoPlayer.Duration,, $LOCALIZE[31297]     ]$INFO[VideoPlayer.MPAA]</label>
                    </control>
                    <control type="label">
                        <posx>TextMargin</posx>
                        <posy>205</posy>
                        <width>670</width>
                        <height>71</height>
                        <font>InfoDetailsFont</font>
                        <include>TextColor_MainColor</include>
                        <scroll>false</scroll>
                        <label>$INFO[VideoPlayer.Genre,,     ]$INFO[VideoPlayer.Season,$LOCALIZE[31973],.]$INFO[VideoPlayer.Episode,,     ]$INFO[VideoPlayer.TVShowTitle]</label>
                    </control>
                    <control type="grouplist">
                        <animation type="Conditional" pulse="true" reversible="false" condition="[!String.IsEmpty(VideoPlayer.AudioLanguage)+!String.IsEqual(VideoPlayer.AudioLanguage,und)]
                        |[!String.IsEmpty(VideoPlayer.SubtitlesLanguage)+!String.IsEqual(VideoPlayer.SubtitlesLanguage,und)]">
                            <include>PulseBasicVisible</include>
                        </animation>
                        <posx>40</posx>
                        <posy>285</posy>
                        <width>1006</width>
                        <height>408</height>
                        <itemgap>-3</itemgap>
                        <orientation>horizontal</orientation>
                        <align>left</align>
                        <aligny>center</aligny>
                        <include>CodecsVideoOSD</include>
                    </control>
                    <control type="grouplist">
                        <animation type="Conditional" pulse="true" reversible="false" condition="[!String.IsEmpty(VideoPlayer.AudioLanguage)+!String.IsEqual(VideoPlayer.AudioLanguage,und)]
                        |[!String.IsEmpty(VideoPlayer.SubtitlesLanguage)+!String.IsEqual(VideoPlayer.SubtitlesLanguage,und)]">
                            <include>PulseBasicHidden</include>
                        </animation>
                        <posx>50</posx>
                        <posy>285</posy>
                        <width>1006</width>
                        <height>408</height>
                        <itemgap>0</itemgap>
                        <orientation>horizontal</orientation>
                        <align>left</align>
                        <aligny>center</aligny>
                        <include>CodecsVideoOSD2</include>
                    </control>
                    <control type="textbox">
                        <posx>840</posx>
                        <posy>80</posy>
                        <width>625</width>
                        <height>250</height>
                        <font>InfoPlotFont</font>
                        <include>TextColor_MainColor</include>
                        <label>$INFO[VideoPlayer.Plot]</label>
                        <include>myautoscroll</include>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
