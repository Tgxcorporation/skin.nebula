<?xml version="1.0" encoding="utf-8"?>
<window>
    <onload condition="Skin.HasSetting(Use_Artist_Slideshow) + system.hasaddon(script.artistslideshow)">RunScript(script.artistslideshow)</onload>

    <controls>
        <control type="group">
            <include condition="!Skin.HasSetting(DisableFanart)">Fanart_Art</include>
            <include>Player_Show</include>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>1080</height>
                <include condition="Skin.HasSetting(BlackGlassMode)+!Skin.HasSetting(DisableFanart)">BgOverlayFanart</include>
                <texture>special://skin/backgrounds/default/$VAR[Theme.Color].png</texture>
            </control>
            <control type="progress" id="23">
                <visible>true</visible>
                <posx>-2000</posx>
                <posy>-1500</posy>
                <width>747</width>
                <info>Player.Progress</info>
                <visible>true</visible>
            </control>
            <control type="group">
                <visible>[Player.ShowInfo | Window.IsActive(MusicOSD) | !Visualisation.Enabled] + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList)]</visible>
                <include condition="!Skin.HasSetting(BlackGlassMode)|Skin.HasSetting(DisableSlidingAnimations)">MusicOSDFade</include>
                <include condition="Skin.HasSetting(BlackGlassMode)+!Skin.HasSetting(DisableSlidingAnimations)">MusicOSDSlideRight</include>
                <control type="group">
                    <posy>55</posy>
                    <animation type="Conditional" condition="!IntegerGreaterThan(Control.GetLabel(23),0)" reversible="false">
                        <effect type="fade" start="0" end="100" time="500"/>
                    </animation>
                    <control type="group">
                        <!-- CLEAR ART -->
                        <visible>Skin.HasSetting(EnableClearArt)</visible>
                        <control type="image">
                            <posx>645r</posx>
                            <posy>283</posy>
                            <width>300</width>
                            <height>235</height>
                            <aspectratio align="right" aligny="bottom">keep</aspectratio>
                            <texture>$INFO[Skin.String(cdartPath)]$INFO[MusicPlayer.Artist,,/logo.png]</texture>
                        </control>
                        <control type="image">
                            <posx>645r</posx>
                            <posy>283</posy>
                            <width>300</width>
                            <height>235</height>
                            <texture>$INFO[MusicPlayer.Art(clearlogo)]</texture>
                            <aspectratio align="right" aligny="bottom">keep</aspectratio>
                        </control>
                    </control>
                    <control type="group">
                        <!-- CDART -->
                        <visible>Skin.HasSetting(EnableCdArt)+!IsEmpty(MusicPlayer.Cover)</visible>
                        <control type="image">
                            <posx>135</posx>
                            <posy>565</posy>
                            <width>321</width>
                            <height>321</height>
                            <texture diffuse="$VAR[Theme.Color]/common/cdart_diffuse.png">$INFO[Player.FolderPath]cdart.png</texture>
                            <aspectratio align="center" aligny="center">keep</aspectratio>
                            <include>Animation_ViewsCDart</include>
                        </control>
                    </control>
                    <control type="image">
                        <posx>280</posx>
                        <posy>538</posy>
                        <width>375</width>
                        <height>375</height>
                        <texture fallback="$VAR[Theme.Color]/defaultAudioBig.png">$INFO[MusicPlayer.Cover]</texture>
                        <include>ThumbBorder</include>
                        <aspectratio aligny="top" align="center">keep</aspectratio>
                    </control>
                    <control type="group">
                        <posx>656</posx>
                        <control type="label">
                            <posx>37</posx>
                            <posy>562</posy>
                            <height>36</height>
                            <width>910</width>
                            <font>InfoTitleFont</font>
                            <include>TextColor_MainColor</include>
                            <label>$INFO[MusicPlayer.Title]</label>
                        </control>
                        <control type="label">
                            <posx>37</posx>
                            <posy>621</posy>
                            <height>66</height>
                            <width>910</width>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_AlternateColor</include>
                            <label>$INFO[MusicPlayer.Artist]</label>
                        </control>
                        <control type="label">
                            <posx>37</posx>
                            <posy>689</posy>
                            <height>66</height>
                            <width>910</width>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_MainColor</include>
                            <label>$INFO[MusicPlayer.Album]</label>
                        </control>
                        <control type="label">
                            <posx>37</posx>
                            <posy>757</posy>
                            <height>66</height>
                            <width>910</width>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_AlternateColor</include>
                            <label>$INFO[MusicPlayer.TimeSpeed] / $INFO[MusicPlayer.Duration]</label>
                        </control>
                        <control type="label">
                            <visible>!Skin.HasSetting(plexbmc)</visible>
                            <posx>950</posx>
                            <posy>757</posy>
                            <height>66</height>
                            <width>910</width>
                            <align>right</align>
                            <font>InfoDetailsFont</font>
                            <include>TextColor_AlternateColor</include>
                            <label>$INFO[MusicPlayer.PlaylistPosition] / $INFO[MusicPlayer.PlaylistLength]</label>
                        </control>
                        <!-- <control type="label">
                            <visible>!Skin.HasSetting(plexbmc)</visible>
                            <posx>37</posx>
                            <posy>825</posy>
                            <height>66</height>
                            <width>420</width>
                            <font>NotificationFont</font>
                            <include>TextColor_MainColor</include>
                            <label>$INFO[MusicPlayer.offset(-1).Title,[COLOR=AlternateColor]$LOCALIZE[210]: [/COLOR]]</label>
                        </control> -->
                        <control type="label">
                            <visible>!Skin.HasSetting(plexbmc)</visible>
                            <posx>950</posx>
                            <posy>835</posy>
                            <height>66</height>
                            <width>420</width>
                            <align>right</align>
                            <font>NotificationFont</font>
                            <include>TextColor_MainColor</include>
                            <label>$INFO[MusicPlayer.offset(1).Title,[COLOR=AlternateColor]$LOCALIZE[209]: [/COLOR]]</label>
                        </control>
                        <control type="grouplist">
                            <posx>37</posx>
                            <posy>835</posy>
                            <width>1006</width>
                            <height>408</height>
                            <itemgap>20</itemgap>
                            <orientation>horizontal</orientation>
                            <align>left</align>
                            <aligny>center</aligny>
                            <include>CodecsMusicOSD</include>
                        </control>
                    </control>
                </control>
            </control>
            <control type="group">
                <animation effect="slide" start="0,0" end="0,-250" time="0" condition="[Player.ShowInfo | Window.IsActive(MusicOSD) | !Visualisation.Enabled] + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList)]">conditional</animation>
                <control type="image">
                    <visible>![Player.Caching | Player.Seeking | player.forwarding | player.rewinding | Player.DisplayAfterSeek] + [Player.Paused] + !Skin.HasSetting(DisablePauseIconOSD)</visible>
                    <posx>810</posx>
                    <posy>390</posy>
                    <width>300</width>
                    <height>300</height>
                    <texture>$VAR[Theme.Color]/OSD/pause.png</texture>
                </control>
                <control type="image">
                    <visible>player.rewinding + !Skin.HasSetting(DisablePauseIconOSD)</visible>
                    <posx>810</posx>
                    <posy>390</posy>
                    <width>300</width>
                    <height>300</height>
                    <texture>$VAR[Theme.Color]/OSD/rewind.png</texture>
                </control>
                <control type="image">
                    <visible>player.forwarding + !Skin.HasSetting(DisablePauseIconOSD)</visible>
                    <posx>810</posx>
                    <posy>390</posy>
                    <width>300</width>
                    <height>300</height>
                    <texture>$VAR[Theme.Color]/OSD/fastforward.png</texture>
                </control>
            </control>
        </control>
    </controls>
</window>
